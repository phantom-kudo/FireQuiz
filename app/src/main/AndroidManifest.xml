<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phantomlabs.firequiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FireQuiz">
        <activity
            android:name=".Activity.activities.QuestionActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".Activity.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.NoFireQuiz"></activity>
        <activity
            android:name=".Activity.activities.SignupActivity"
            android:exported="true"
            android:theme="@style/Theme.NoFireQuiz"></activity>
        <activity
            android:name=".Activity.activities.IntroActivity"
            android:exported="true"
            android:theme="@style/Theme.NoFireQuiz">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Activity.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NoFireQuiz">

        </activity>
    </application>

</manifest>